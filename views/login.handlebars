{{!-- Log In Form --}}
<div class="row">
  <div class="block col-md-6">
    <div class="columns is-centered is-vcentered">
        <h2 class="title is-3 ml-6">Log In</h2>

      <div class="section is-vcentered">
        <form class="box is-pulled-left form login-form ml-5">
          <div class="form-group mb-1">
            <label for="email-login">Email</label>
            <input class="form-input is-pulled-right ml-2" type="text" placeholder="Your Email" id="email-login" />
          </div>
          <div class="form-group">
            <label for="password-login">Password</label>
            <input class="form-input is-pulled-right ml-2" type="password" placeholder="Your Password" id="password-login" />
          </div>
          <div class="form-group mt-4">
            <button class="button has-text-warning" type="submit">Log In</button>
        </form>
      </div>
    </div>
  </div>
</div>

{{!-- Sign Up Form --}}
  <div class="block col-md-6">
    <div class="columns is-centered is-vcentered">
        <h2 class="title is-3 ml-6">Sign Up</h2>

      <div class="section is-vcentered">
        <form class="box is-pulled-left form signup-form">
          <div class=" form-group mb-1">
            <label for="name-signup">Name</label>
            <input class="form-input is-pulled-right ml-2" type="text" placeholder="Your Name" id="name-signup" />
          </div>
          <div class="form-group mb-1">
            <label for="email-signup">Email</label>
            <input class="form-input is-pulled-right ml-2" type="text" placeholder="Your Email" id="email-signup" />
          </div>
          <div class="form-group">
            <label for="password-signup">Password</label>
            <input class="form-input is-pulled-right ml-2" type="password" placeholder="Your Password" id="password-signup" />
          </div>
          <div class="form-group mt-4">
            <button class="button has-text-primary" type="submit"><a href="createProfile">Create Account</a></button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>

